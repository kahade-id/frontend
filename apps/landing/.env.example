# ─────────────────────────────────────────────────────────────────
# Kahade Landing — Environment Variables
# Copy to .env.local for local dev. Never commit actual values!
# ─────────────────────────────────────────────────────────────────

# App Identity
VITE_APP_MODE=landing
VITE_APP_NAME=Kahade

# FIX (Issue #3): Variable name corrected from VITE_API_URL → VITE_API_BASE_URL
VITE_API_BASE_URL=http://localhost:3000/api

# Cross-app navigation domains
VITE_APP_DOMAIN=https://app.kahade.id
VITE_ADMIN_DOMAIN=https://admin.kahade.id

# Analytics (optional)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ENDPOINT=
VITE_ANALYTICS_WEBSITE_ID=

# Error tracking (optional)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
