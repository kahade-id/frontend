{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "VITE_APP_MODE",
        "VITE_APP_NAME",
        "VITE_APP_VERSION",
        "VITE_API_BASE_URL",
        "VITE_API_TIMEOUT",
        "VITE_WS_URL",
        "VITE_LANDING_DOMAIN",
        "VITE_APP_DOMAIN",
        "VITE_ADMIN_DOMAIN",
        "VITE_SENTRY_DSN",
        "VITE_SENTRY_ENVIRONMENT",
        "VITE_ENABLE_ANALYTICS",
        "VITE_ANALYTICS_WEBSITE_ID",
        "VITE_ENABLE_PWA",
        "VITE_ENABLE_CSP",
        "VITE_COMMIT_SHA",
        "VITE_BUILD_TIME",
        "VITE_SOURCEMAP"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
